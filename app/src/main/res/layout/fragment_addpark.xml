<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="400dp"
                                             android:layout_height="300dp">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Add Park"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"
              android:layout_marginRight="8dp"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="8dp"
              android:layout_marginStart="8dp"
              android:padding="@dimen/addparkPadding"
              android:textSize="20dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
              android:id="@+id/textView3"/>

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:id="@+id/etName"
              android:hint="Park name" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              android:layout_marginRight="8dp" android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
              android:paddingHorizontal="@dimen/addparkPadding"
    android:text="testpark"/>

    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/etLatitude"
              android:hint="Latitude" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/etName"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
              android:layout_marginStart="8dp"
              android:paddingHorizontal="@dimen/addparkPadding"
              android:text="47.503"
    />
    <EditText android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/etLongitude"
              android:hint="Longitude" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/etName"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              android:layout_marginRight="8dp"
              android:paddingHorizontal="@dimen/addparkPadding"
              android:text="19.071"
    />
    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/etLatitude"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:id="@+id/btnAdd"
    android:paddingHorizontal="@dimen/addparkPadding"
    android:text="Add"/>


</android.support.constraint.ConstraintLayout>